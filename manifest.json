{
  "manifest_version": 3,
  "name": "GlassTab",
  "version": "0.6",
  "description": "A beautiful new tab with frosted glass design, featuring weather, search (text and image), and daily wallpapers.",
  "permissions": [
    "geolocation"
  ],
  "host_permissions": [
    "https://picsum.photos/*",
    "https://www.bing.com/*",
    "https://api.imgbb.com/*",
    "https://api.pexels.com/*"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_title": "GlassTab"
  },
  "icons": {
    "32": "assets/icon-32.png",
    "64": "assets/icon-64.png",
    "128": "assets/icon-128.png"
  }
}
